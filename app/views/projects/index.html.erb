<div class="container">
  <div class="card-container" id="projects">
    <% @projects.each do |project| %>
      <div class="card" style="width: 18rem;" id="<%= dom_id project %>">
        <a href="<%= project_path(project) %>">
          <% if project.photos.attached? %>
            <%= image_tag url_for(project.photos.first), class: "card-img-top" %>
          <% end %>
        </a>
        <div class="card-body">
          <h5 class="card-title"><%= project.name %></h5>
          <p class="card-text"><%= project.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

